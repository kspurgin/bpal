<p id="notice"><%= notice %></p>

<h1>Scent Notes</h1>

<%= link_to 'New Scent Note', new_scent_note_path %>

<table>
  <thead>
    <tr>
      <th>Scent</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scent_notes.each do |scent_note| %>
      <tr>
        <td><%= scent_note.scent.name %></td>
        <td><%= scent_note.note.name %></td>
        <td><%= link_to 'Show', scent_note %></td>
        <td><%= link_to 'Edit', edit_scent_note_path(scent_note) %></td>
        <td><%= link_to 'Destroy', scent_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


